@page "/export"
@using AuditHistoryExtractorPro.Application.UseCases.ExportAudit
@using AuditHistoryExtractorPro.Models
@using MediatR
@inject IMediator Mediator
@inject ILogger<Export> Logger
@inject NavigationManager Navigation

<PageTitle>Exportar - Audit History Extractor Pro</PageTitle>

<h1 style="color: #0078D4; margin-bottom: 30px; font-size: 36px;">üìä Exportar Datos</h1>

<div class="export-container">
    <div class="export-section">
        <h2 style="color: #0078D4; margin-bottom: 20px;">üìÅ Configuraci√≥n de Exportaci√≥n</h2>
        
        <div class="form-group">
            <label>Formato de Exportaci√≥n:</label>
            <div class="format-selector">
                <button class="format-button @(_format == "Excel" ? "active" : "")" 
                        @onclick="@(() => _format = "Excel")">
                    <div class="format-icon" style="background: #107C10;">üìä</div>
                    <div>
                        <strong>Excel</strong>
                        <p>Archivo .xlsx con formato</p>
                    </div>
                </button>
                
                <button class="format-button @(_format == "CSV" ? "active" : "")" 
                        @onclick="@(() => _format = "CSV")">
                    <div class="format-icon" style="background: #0078D4;">üìÑ</div>
                    <div>
                        <strong>CSV</strong>
                        <p>Valores separados por comas</p>
                    </div>
                </button>
                
                <button class="format-button @(_format == "JSON" ? "active" : "")" 
                        @onclick="@(() => _format = "JSON")">
                    <div class="format-icon" style="background: #5C2D91;">{ }</div>
                    <div>
                        <strong>JSON</strong>
                        <p>Formato estructurado</p>
                    </div>
                </button>
            </div>
        </div>

        <div class="form-group">
            <label>Nombre del archivo:</label>
            <input type="text" @bind="_fileName" placeholder="AuditHistory_Export" class="form-input" />
        </div>

        <div class="form-group">
            <label>Ruta de destino:</label>
            <input type="text" @bind="_outputPath" placeholder="C:\Exports" class="form-input" />
            <small style="color: #605E5C;">Se crear√° si no existe. Dejar en blanco para usar carpeta por defecto.</small>
        </div>

        <div class="form-group">
            <label>Opciones de exportaci√≥n:</label>
            <div class="checkbox-group">
                <label class="checkbox-label">
                    <input type="checkbox" @bind="_includeHeaders" />
                    <span>Incluir encabezados</span>
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" @bind="_includeMetadata" />
                    <span>Incluir metadatos</span>
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" @bind="_compressFile" />
                    <span>Comprimir archivo (.zip)</span>
                </label>
            </div>
        </div>

        @if (_isExporting)
        {
            <div class="progress-container">
                <div class="spinner"></div>
                <p style="text-align: center; color: #0078D4; margin-top: 15px; font-weight: 600;">
                    Exportando datos...
                </p>
            </div>
        }

        @if (!string.IsNullOrEmpty(_message))
        {
            <div class="@(_isError ? "message-error" : "message-success")">
                @_message
                @if (!string.IsNullOrEmpty(_exportedFilePath))
                {
                    <p style="margin-top: 10px;">
                        <strong>üìÅ Archivo:</strong> @_exportedFilePath
                    </p>
                    <p>
                        <strong>üíæ Tama√±o:</strong> @FormatFileSize(_fileSize)
                    </p>
                }
            </div>
        }

        <div class="stats-grid">
            <div class="stat-card" style="border-left: 4px solid #0078D4;">
                <div class="stat-number">@_totalRecords</div>
                <div class="stat-label">Registros Disponibles</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #107C10;">
                <div class="stat-number">@_exportCount</div>
                <div class="stat-label">Exportaciones Realizadas</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #5C2D91;">
                <div class="stat-number">@_format</div>
                <div class="stat-label">Formato Seleccionado</div>
            </div>
        </div>

        <div class="button-group">
            <button class="btn-primary" @onclick="StartExport" disabled="@_isExporting">
                @(_isExporting ? "‚è≥ Exportando..." : "üöÄ Exportar Datos")
            </button>
            <button class="btn-secondary" @onclick="@(() => Navigation.NavigateTo("/"))">
                ‚¨ÖÔ∏è Volver al Dashboard
            </button>
            <button class="btn-info" @onclick="@(() => Navigation.NavigateTo("/extract"))">
                üîΩ Nueva Extracci√≥n
            </button>
        </div>
    </div>
</div>

@code {
    private string _format = "Excel";
    private string _fileName = "AuditHistory_Export";
    private string _outputPath = string.Empty;
    private bool _includeHeaders = true;
    private bool _includeMetadata = true;
    private bool _compressFile = false;
    
    private bool _isExporting = false;
    private string _message = string.Empty;
    private bool _isError = false;
    private string _exportedFilePath = string.Empty;
    private long _fileSize = 0;
    
    private int _totalRecords = 0; // Se obtiene de la extracci√≥n previa
    private int _exportCount = 0;

    protected override async Task OnInitializedAsync()
    {
        // TODO: Cargar el n√∫mero de registros extra√≠dos previamente desde el servicio
        await Task.CompletedTask;
    }

    private async Task StartExport()
    {
        _isExporting = true;
        _message = string.Empty;
        _isError = false;
        _exportedFilePath = string.Empty;

        try
        {
            // Validaci√≥n
            if (string.IsNullOrWhiteSpace(_fileName))
            {
                _message = "‚ö†Ô∏è Por favor ingrese un nombre para el archivo.";
                _isError = true;
                _isExporting = false;
                return;
            }

            // Crear configuraci√≥n de exportaci√≥n
            var config = new ExportConfiguration
            {
                Format = _format switch
                {
                    "Excel" => ExportFormat.Excel,
                    "CSV" => ExportFormat.Csv,
                    "JSON" => ExportFormat.Json,
                    _ => ExportFormat.Excel
                },
                OutputPath = string.IsNullOrWhiteSpace(_outputPath) ? 
                    Path.Combine(Environment.GetFolderPath(Environment.SpecialFolder.MyDocuments), "AuditExports") : 
                    _outputPath,
                FileName = _fileName,
                CompressOutput = _compressFile,
                IncludeTimestamp = true
            };

            // TODO: Obtener los registros reales de la extracci√≥n previa
            var records = new List<AuditRecord>();

            var command = new ExportAuditCommand
            {
                Records = records,
                Configuration = config
            };

            var response = await Mediator.Send(command);

            if (response.Success)
            {
                _exportedFilePath = response.FilePath ?? string.Empty;
                _fileSize = response.FileSize;
                _exportCount++;
                _message = $"‚úÖ Exportaci√≥n completada exitosamente!";
                _isError = false;
            }
            else
            {
                _message = $"‚ùå Error: {response.ErrorMessage}";
                _isError = true;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error durante la exportaci√≥n");
            _message = $"‚ùå Error inesperado: {ex.Message}";
            _isError = true;
        }
        finally
        {
            _isExporting = false;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

