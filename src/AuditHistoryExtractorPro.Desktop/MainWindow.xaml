<Window x:Class="AuditHistoryExtractorPro.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Audit History Extractor Pro - Desktop"
        Height="760"
        Width="1260"
        MinHeight="680"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <SolidColorBrush x:Key="MsBlueBrush" Color="#00A4EF" />
        <SolidColorBrush x:Key="MsGreenBrush" Color="#7FBA00" />
        <SolidColorBrush x:Key="MsGrayBrush" Color="#F3F2F1" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#323130" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="18,9" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource MsGrayBrush}"
                    BorderBrush="#E1DFDD"
                    BorderThickness="1"
                    Padding="14"
                    CornerRadius="6"
                    Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Filtros"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#323130"
                                   Margin="0,0,0,14" />

                        <TextBlock Text="Entidad" Style="{StaticResource SectionTitleStyle}" />
                        <ComboBox x:Name="EntitySelector"
                                  ItemsSource="{Binding AvailableEntities}"
                                  SelectedItem="{Binding SelectedEntity, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  Text="{Binding EntityName, UpdateSourceTrigger=PropertyChanged}"
                                  Height="34"
                                  Margin="0,0,0,14" />

                        <TextBlock Text="Vista del sistema" Style="{StaticResource SectionTitleStyle}" />
                        <ComboBox x:Name="ViewSelector"
                                  ItemsSource="{Binding AvailableViews}"
                                  SelectedItem="{Binding SelectedView, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  IsTextSearchEnabled="True"
                                  Height="34"
                                  Margin="0,0,0,14" />

                        <GroupBox Header="Rango de Fechas" Margin="0,0,0,14" Padding="10,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Desde" VerticalAlignment="Center" Margin="0,0,10,8" />
                                <DatePicker Grid.Column="1" SelectedDate="{Binding SelectedDateFrom}" Margin="0,0,8,8" />
                                <TextBox Grid.Column="2"
                                         Width="52"
                                         Height="28"
                                         Margin="0,0,0,8"
                                         HorizontalContentAlignment="Center"
                                         IsEnabled="{Binding IsManualTimeEnabled}"
                                         Text="{Binding FromTimeText, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="1" Text="Hasta" VerticalAlignment="Center" Margin="0,0,10,0" />
                                <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding SelectedDateTo}" Margin="0,0,8,0" />
                                <TextBox Grid.Row="1"
                                         Grid.Column="2"
                                         Width="52"
                                         Height="28"
                                         HorizontalContentAlignment="Center"
                                         IsEnabled="{Binding IsManualTimeEnabled}"
                                         Text="{Binding ToTimeText, UpdateSourceTrigger=PropertyChanged}" />

                                <CheckBox Grid.Row="2"
                                          Grid.ColumnSpan="3"
                                          Margin="0,10,0,0"
                                          Content="Día Completo (00:00 - 23:59)"
                                          IsChecked="{Binding IsFullDay, Mode=TwoWay}" />
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Filtros Opcionales" Margin="0,0,0,14" Padding="10,8">
                            <StackPanel>
                                <TextBlock Text="Buscar usuario" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,6" />
                                <TextBox Height="32"
                                         Margin="0,0,0,10"
                                         Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}" />

                                <ComboBox Height="32"
                                          Margin="0,0,0,10"
                                          ItemsSource="{Binding AvailableUsers}"
                                          SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                                          DisplayMemberPath="Name" />

                                <TextBlock Text="Operaciones" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,6" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="Seleccionar todo" Command="{Binding SelectAllOperationsCommand}" Margin="0,0,6,0" />
                                    <Button Content="Deseleccionar todo" Command="{Binding DeselectAllOperationsCommand}" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding OperationsList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Label}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,0,0,2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Text="Acciones" Style="{StaticResource SectionTitleStyle}" Margin="0,8,0,6" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="Seleccionar todo" Command="{Binding SelectAllActionsCommand}" Margin="0,0,6,0" />
                                    <Button Content="Deseleccionar todo" Command="{Binding DeselectAllActionsCommand}" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding ActionsList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Label}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,0,0,2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Text="Atributos de Interés" Style="{StaticResource SectionTitleStyle}" Margin="0,8,0,6" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Content="Seleccionar todo" Command="{Binding SelectAllAttributesCommand}" Margin="0,0,6,0" />
                                    <Button Content="Deseleccionar todo" Command="{Binding DeselectAllAttributesCommand}" />
                                </StackPanel>
                                <ScrollViewer Height="140" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding AttributesList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Label}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,0,0,2" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </GroupBox>

                        <Expander Header="Avanzado" IsExpanded="False" Margin="0,0,0,12">
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Text="FetchXML Manual"
                                           Style="{StaticResource SectionTitleStyle}"
                                           Margin="0,0,0,6" />
                                <TextBox MinHeight="130"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="{Binding ManualFetchXml, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#E1DFDD"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10"
                        Background="White">
                    <DataGrid IsReadOnly="True"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding PreviewRecords}"
                              SelectedItem="{Binding SelectedPreviewRecord, Mode=TwoWay}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              AlternatingRowBackground="#FAF9F8"
                              RowBackground="White"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="GUID" Binding="{Binding RecordId}" Width="220" />
                            <DataGridTextColumn Header="Entidad" Binding="{Binding EntityName}" Width="120" />
                            <DataGridTextColumn Header="Acción" Binding="{Binding ActionName}" Width="90" />
                            <DataGridTextColumn Header="Campo" Binding="{Binding ChangedField}" Width="140" />
                            <DataGridTextColumn Header="Valor Anterior" Binding="{Binding OldValue}" Width="*" />
                            <DataGridTextColumn Header="Valor Nuevo" Binding="{Binding NewValue}" Width="*" />
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="Copiar GUID" Command="{Binding CopyGuidCommand}" />
                                <MenuItem Header="Abrir Registro" Command="{Binding OpenRecordCommand}" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Border>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button x:Name="btnConnect"
                            Content="Conectar"
                            Command="{Binding ConnectCommand}"
                            Background="{StaticResource MsBlueBrush}"
                            Style="{StaticResource PrimaryButtonStyle}" />

                    <Button x:Name="btnExport"
                            Content="Exportar"
                            Command="{Binding ExtractCommand}"
                            Background="{StaticResource MsGreenBrush}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0"
                            IsEnabled="{Binding ElementName=ResultsGridProxy, Path=HasItems}" />

                    <DataGrid x:Name="ResultsGridProxy"
                              Visibility="Collapsed"
                              ItemsSource="{Binding PreviewRecords}" />
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="1"
                BorderBrush="#E1DFDD"
                BorderThickness="1,1,0,0"
                Background="#FAF9F8"
                Padding="14,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0"
                             Height="12"
                             Minimum="0"
                             Maximum="100"
                             Value="{Binding ProgressValue}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center" />

                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="#605E5C"
                           Margin="12,0,0,0"
                           TextTrimming="CharacterEllipsis" />
            </Grid>
        </Border>
    </Grid>
</Window>
