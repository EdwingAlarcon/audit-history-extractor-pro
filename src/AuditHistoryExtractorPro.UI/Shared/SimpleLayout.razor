@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="es">
<head>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0078D4 0%, #004578 100%);
            min-height: 100vh;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .header {
            background: rgba(255, 255, 255, 0.98);
            padding: 25px 35px;
            border-radius: 8px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .header h1 {
            color: #0078D4;
            font-size: 32px;
            font-weight: 700;
        }
        
        .header p {
            color: #605E5C;
            margin-top: 5px;
            font-size: 14px;
        }

        .nav-menu {
            display: flex;
            gap: 15px;
        }

        .nav-link {
            color: #323130;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-weight: 600;
            transition: all 0.3s;
            background: #F3F2F1;
        }

        .nav-link:hover {
            background: #0078D4;
            color: white;
            transform: translateY(-2px);
        }
        
        .content-box {
            background: rgba(255, 255, 255, 0.98);
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            min-height: 600px;
        }
        
        .card {
            background: linear-gradient(135deg, #0078D4 0%, #004578 100%);
            color: white;
            padding: 30px;
            border-radius: 8px;
            margin: 20px 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        }
        
        .card h2 {
            font-size: 48px;
            margin-bottom: 10px;
        }
        
        .card p {
            font-size: 18px;
            opacity: 0.95;
        }
        
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        
        .btn {
            background: #0078D4;
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .btn:hover {
            background: #106EBE;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 120, 212, 0.4);
        }

        .footer {
            text-align: center;
            color: white;
            margin-top: 30px;
            padding: 20px;
            font-size: 14px;
            opacity: 0.9;
        }
    </style>
</head>
