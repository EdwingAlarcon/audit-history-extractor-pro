@page "/history"
@using AuditHistoryExtractorPro.Application.UseCases.CompareRecords
@using AuditHistoryExtractorPro.Domain.Entities
@using AuditHistoryExtractorPro.UI.Services
@using MediatR
@inject IMediator Mediator
@inject ILogger<History> Logger
@inject NavigationManager Navigation
@inject AuditSessionState SessionState

<PageTitle>Historial - Audit History Extractor Pro</PageTitle>

<h1 style="color: #0078D4; margin-bottom: 30px; font-size: 36px;">üìù Historial de Auditor√≠a</h1>

<div class="history-container">
    <!-- Filtros -->
    <div class="filter-section">
        <h2 style="color: #0078D4; margin-bottom: 20px;">üîç Filtros de B√∫squeda</h2>
        
        <div class="filter-grid">
            <div class="form-group">
                <label>Entidad:</label>
                <input type="text" @bind="_entityFilter" placeholder="Todas las entidades" class="form-input" />
            </div>

            <div class="form-group">
                <label>ID del Registro:</label>
                <input type="text" @bind="_recordIdFilter" placeholder="Filtrar por ID" class="form-input" />
            </div>

            <div class="form-group">
                <label>Usuario:</label>
                <input type="text" @bind="_userFilter" placeholder="Todos los usuarios" class="form-input" />
            </div>

            <div class="form-group">
                <label>Operaci√≥n:</label>
                <select @bind="_operationFilter" class="form-input">
                    <option value="">Todas</option>
                    <option value="Create">Crear</option>
                    <option value="Update">Actualizar</option>
                    <option value="Delete">Eliminar</option>
                </select>
            </div>

            <div class="form-group">
                <label>Fecha Desde:</label>
                <input type="date" @bind="_dateFrom" class="form-input" />
            </div>

            <div class="form-group">
                <label>Fecha Hasta:</label>
                <input type="date" @bind="_dateTo" class="form-input" />
            </div>
        </div>

        <div class="button-group">
            <button class="btn-primary" @onclick="ApplyFilters" disabled="@_isLoading">
                üîç Aplicar Filtros
            </button>
            <button class="btn-secondary" @onclick="ClearFilters" disabled="@_isLoading">
                üîÑ Limpiar
            </button>
        </div>
    </div>

    <!-- Resultados -->
    <div class="results-section">
        @if (!string.IsNullOrWhiteSpace(_message))
        {
            <div class="@(_isError ? "message-error" : "message-info")">
                @_message
            </div>
        }

        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h2 style="color: #0078D4; margin: 0;">üìä Registros de Auditor√≠a</h2>
            <span style="color: #605E5C; font-weight: 600;">@_filteredRecords.Count registros encontrados</span>
        </div>

        @if (_isLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p style="color: #0078D4; margin-top: 15px;">Cargando registros...</p>
            </div>
        }
        else if (_filteredRecords.Any())
        {
            <div class="table-container">
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>Fecha/Hora</th>
                            <th>Entidad</th>
                            <th>Operaci√≥n</th>
                            <th>Usuario</th>
                            <th>Campos Modificados</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in _pagedRecords)
                        {
                            <tr>
                                <td>@record.CreatedOn.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>
                                    <span class="entity-badge">@record.EntityName</span>
                                </td>
                                <td>
                                    <span class="operation-badge @GetOperationClass(record.Operation)">
                                        @record.Operation
                                    </span>
                                </td>
                                <td>@record.UserName</td>
                                <td>@record.Changes.Count campos</td>
                                <td>
                                    <button class="btn-action" @onclick="() => ViewDetails(record.RecordId)">
                                        üëÅÔ∏è Ver
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginaci√≥n -->
            <div class="pagination">
                <button class="page-btn" @onclick="PreviousPage" disabled="@(_currentPage == 1)">
                    ‚Üê Anterior
                </button>
                <span style="color: #605E5C; font-weight: 600;">
                    P√°gina @_currentPage de @_totalPages
                </span>
                <button class="page-btn" @onclick="NextPage" disabled="@(_currentPage >= _totalPages)">
                    Siguiente ‚Üí
                </button>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 64px; margin-bottom: 20px;">üì≠</div>
                <h3 style="color: #323130; margin-bottom: 10px;">No se encontraron registros</h3>
                <p style="color: #605E5C;">Intenta ajustar los filtros de b√∫squeda o realiza una nueva extracci√≥n.</p>
                <button class="btn-primary" style="margin-top: 20px;" @onclick="@(() => Navigation.NavigateTo("/extract"))">
                    üîΩ Nueva Extracci√≥n
                </button>
            </div>
        }
    </div>

    <!-- Estad√≠sticas -->
    <div class="stats-section">
        <h3 style="color: #0078D4; margin-bottom: 20px;">üìà Estad√≠sticas</h3>
        <div class="stats-grid">
            <div class="stat-card" style="border-left: 4px solid #107C10;">
                <div class="stat-number">@_stats.TotalCreates</div>
                <div class="stat-label">‚úÖ Creaciones</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #0078D4;">
                <div class="stat-number">@_stats.TotalUpdates</div>
                <div class="stat-label">üìù Actualizaciones</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #E81123;">
                <div class="stat-number">@_stats.TotalDeletes</div>
                <div class="stat-label">üóëÔ∏è Eliminaciones</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #5C2D91;">
                <div class="stat-number">@_stats.UniqueEntities</div>
                <div class="stat-label">üì¶ Entidades √önicas</div>
            </div>
        </div>
    </div>
</div>

@code {
    private string _entityFilter = string.Empty;
    private string _recordIdFilter = string.Empty;
    private string _userFilter = string.Empty;
    private string _operationFilter = string.Empty;
    private DateTime? _dateFrom = DateTime.Now.AddDays(-30);
    private DateTime? _dateTo = DateTime.Now;

    private readonly List<AuditRecord> _allAuditRecords = new();
    private List<AuditRecord> _filteredRecords = new();
    private List<AuditRecord> _pagedRecords = new();
    private bool _isLoading = false;
    private int _currentPage = 1;
    private int _totalPages = 1;
    private const int _pageSize = 25;
    private string _message = string.Empty;
    private bool _isError = false;

    private AuditStats _stats = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAuditData();
    }

    private async Task LoadAuditData()
    {
        _isLoading = true;
        _message = string.Empty;
        _isError = false;

        try
        {
            var records = SessionState.GetRecordsCopy();
            _allAuditRecords.Clear();
            _allAuditRecords.AddRange(records);
            RebuildView(resetPage: true);

            if (!_allAuditRecords.Any())
            {
                _message = "‚ÑπÔ∏è No hay datos en sesi√≥n. Ejecuta una extracci√≥n para ver historial.";
            }

            await Task.CompletedTask;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cargar datos de auditor√≠a");
            _message = "‚ùå Ocurri√≥ un error al cargar el historial.";
            _isError = true;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ApplyFilters()
    {
        _isLoading = true;
        _message = string.Empty;
        _isError = false;
        
        try
        {
            if (_dateFrom.HasValue && _dateTo.HasValue && _dateFrom > _dateTo)
            {
                _message = "‚ö†Ô∏è La fecha inicial no puede ser mayor que la fecha final.";
                _isError = true;
                return;
            }

            if (!string.IsNullOrWhiteSpace(_recordIdFilter) && !Guid.TryParse(_recordIdFilter, out _))
            {
                _message = "‚ö†Ô∏è El filtro de ID debe ser un GUID v√°lido.";
                _isError = true;
                return;
            }

            RebuildView(resetPage: true);

            if (!_filteredRecords.Any())
            {
                _message = "‚ÑπÔ∏è No hay resultados para los filtros aplicados.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al aplicar filtros");
            _message = "‚ùå Ocurri√≥ un error al aplicar filtros.";
            _isError = true;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ClearFilters()
    {
        _entityFilter = string.Empty;
        _recordIdFilter = string.Empty;
        _userFilter = string.Empty;
        _operationFilter = string.Empty;
        _dateFrom = DateTime.Now.AddDays(-30);
        _dateTo = DateTime.Now;
        _message = string.Empty;
        _isError = false;
        RebuildView(resetPage: true);
        await Task.CompletedTask;
    }

    private void ViewDetails(Guid recordId)
    {
        // Navegar a una p√°gina de detalles o mostrar un modal
        Logger.LogInformation($"Viewing details for record {recordId}");
    }

    private void PreviousPage()
    {
        if (_currentPage > 1)
        {
            _currentPage--;
            UpdatePagedRecords();
        }
    }

    private void NextPage()
    {
        if (_currentPage < _totalPages)
        {
            _currentPage++;
            UpdatePagedRecords();
        }
    }

    private string GetOperationClass(string operation) => operation switch
    {
        "Create" => "operation-create",
        "Update" => "operation-update",
        "Delete" => "operation-delete",
        _ => ""
    };

    private void RebuildView(bool resetPage)
    {
        IEnumerable<AuditRecord> query = _allAuditRecords;

        if (!string.IsNullOrWhiteSpace(_entityFilter))
        {
            query = query.Where(r => r.EntityName.Contains(_entityFilter.Trim(), StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(_userFilter))
        {
            query = query.Where(r => r.UserName.Contains(_userFilter.Trim(), StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(_operationFilter))
        {
            query = query.Where(r => string.Equals(r.Operation, _operationFilter, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrWhiteSpace(_recordIdFilter) && Guid.TryParse(_recordIdFilter, out var recordId))
        {
            query = query.Where(r => r.RecordId == recordId);
        }

        if (_dateFrom.HasValue)
        {
            var fromDate = _dateFrom.Value.Date;
            query = query.Where(r => r.CreatedOn >= fromDate);
        }

        if (_dateTo.HasValue)
        {
            var toDateInclusive = _dateTo.Value.Date.AddDays(1).AddTicks(-1);
            query = query.Where(r => r.CreatedOn <= toDateInclusive);
        }

        _filteredRecords = query
            .OrderByDescending(r => r.CreatedOn)
            .ToList();

        _stats = BuildStats(_filteredRecords);
        _totalPages = Math.Max(1, (int)Math.Ceiling(_filteredRecords.Count / (double)_pageSize));

        if (resetPage)
        {
            _currentPage = 1;
        }
        else if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }

        UpdatePagedRecords();
    }

    private void UpdatePagedRecords()
    {
        var skip = (_currentPage - 1) * _pageSize;
        _pagedRecords = _filteredRecords
            .Skip(skip)
            .Take(_pageSize)
            .ToList();
    }

    private static AuditStats BuildStats(List<AuditRecord> records)
    {
        return new AuditStats
        {
            TotalCreates = records.Count(r => string.Equals(r.Operation, "Create", StringComparison.OrdinalIgnoreCase)),
            TotalUpdates = records.Count(r => string.Equals(r.Operation, "Update", StringComparison.OrdinalIgnoreCase)),
            TotalDeletes = records.Count(r => string.Equals(r.Operation, "Delete", StringComparison.OrdinalIgnoreCase)),
            UniqueEntities = records
                .Select(r => r.EntityName)
                .Where(e => !string.IsNullOrWhiteSpace(e))
                .Distinct(StringComparer.OrdinalIgnoreCase)
                .Count()
        };
    }

    private class AuditStats
    {
        public int TotalCreates { get; set; }
        public int TotalUpdates { get; set; }
        public int TotalDeletes { get; set; }
        public int UniqueEntities { get; set; }
    }
}

