</div>

@code {
    private readonly ExportPageViewModel _vm = new();

    protected override async Task OnInitializedAsync()
    {
        _vm.TotalRecords = SessionState.Count;
        await Task.CompletedTask;
    }

    private async Task StartExport()
    {
        _vm.IsExporting = true;
        _vm.Message = string.Empty;
        _vm.IsError = false;
        _vm.ExportedFilePath = string.Empty;

        try
        {
            var records = SessionState.GetRecordsCopy();
            _vm.TotalRecords = records.Count;

            var configResult = ExportViewService.BuildConfiguration(new ExportInputModel
            {
                Format = _vm.Format,
                FileName = _vm.FileName,
                OutputPath = _vm.OutputPath,
                CompressFile = _vm.CompressFile,
                TotalRecords = _vm.TotalRecords
            });

            if (!configResult.Success || configResult.Configuration is null)
            {
                _vm.Message = configResult.ErrorMessage ?? "‚ùå No fue posible construir la configuraci√≥n de exportaci√≥n.";
                _vm.IsError = true;
                _vm.IsExporting = false;
                return;
            }

            var config = configResult.Configuration;

            var command = new ExportAuditCommand
            {
                Records = records,
                Configuration = config
            };

            var response = await Mediator.Send(command);

            if (response.Success)
            {
                _vm.ExportedFilePath = response.FilePath ?? string.Empty;
                _vm.FileSize = response.FileSize;
                _vm.ExportCount++;
                _vm.Message = "‚úÖ Exportaci√≥n completada exitosamente!";
                _vm.IsError = false;
            }
            else
            {
                _vm.Message = $"‚ùå Error: {response.ErrorMessage}";
                _vm.IsError = true;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error durante la exportaci√≥n");
            _vm.Message = $"‚ùå Error inesperado: {ex.Message}";
            _vm.IsError = true;
        }
        finally
        {
            _vm.IsExporting = false;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

