        </div>

        @if (_vm.TotalRecords <= 0)
        {
            <div class="message-info">
                ‚ö†Ô∏è No hay registros listos para exportar. Ejecuta una extracci√≥n primero.
            </div>
        }

        @if (_vm.IsExporting)
        {
            <div class="progress-container">
                <div class="spinner"></div>
                <p style="text-align: center; color: #0078D4; margin-top: 15px; font-weight: 600;">
                    Exportando datos...
                </p>
