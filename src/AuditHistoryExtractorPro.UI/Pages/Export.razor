        }

        @if (!string.IsNullOrEmpty(_vm.Message))
        {
            <div class="@(_vm.IsError ? "message-error" : "message-success")">
                @_vm.Message
                @if (!string.IsNullOrEmpty(_vm.ExportedFilePath))
                {
                    <p style="margin-top: 10px;">
                        <strong>üìÅ Archivo:</strong> @_vm.ExportedFilePath
                    </p>
                    <p>
                        <strong>üíæ Tama√±o:</strong> @FormatFileSize(_vm.FileSize)
                    </p>
                }
            </div>
        }

        <div class="stats-grid">
            <div class="stat-card" style="border-left: 4px solid #0078D4;">
                <div class="stat-number">@_vm.TotalRecords</div>
                <div class="stat-label">Registros Disponibles</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #107C10;">
                <div class="stat-number">@_vm.ExportCount</div>
                <div class="stat-label">Exportaciones Realizadas</div>
            </div>
            <div class="stat-card" style="border-left: 4px solid #5C2D91;">
                <div class="stat-number">@_vm.Format</div>
                <div class="stat-label">Formato Seleccionado</div>
            </div>
        </div>

        <div class="button-group">
            <button class="btn-primary" @onclick="StartExport" disabled="@(!_vm.CanExport)">
                @(_vm.IsExporting ? "‚è≥ Exportando..." : "üöÄ Exportar Datos")
            </button>
            <button class="btn-secondary" @onclick="@(() => Navigation.NavigateTo("/"))">
                ‚¨ÖÔ∏è Volver al Dashboard
            </button>
            <button class="btn-info" @onclick="@(() => Navigation.NavigateTo("/extract"))">
                üîΩ Nueva Extracci√≥n
            </button>
        </div>
